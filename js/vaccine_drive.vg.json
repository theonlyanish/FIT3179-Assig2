{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",

    "data": {
      "url": "https://raw.githubusercontent.com/theonlyanish/FIT3179-Assig2/main/data/COVID-19_India_Statewise_Vaccine.csv"
    },
    "repeat": {"layer": ["Dose 1", "Population"]},
    "spec": {
      "mark": "bar",
      "encoding": {
        "x": {
          "field":"State/UTs",
          "type": "nominal"
        },
        "y": {
          "aggregate": "sum",
          "field": {"repeat": "layer"},
          "type": "quantitative",
          "title": "Vaccine drive"
        },
        "color": {"datum": {"repeat": "layer"}, "title": "Sum"},
        "xOffset": {"datum": {"repeat": "layer"}},

         "tooltip": [
        {"field": "State/UTs", "type": "nominal", "title": "State"},
        {
          "field": "Population",
          "type": "quantitative",
          "title": "Population",
          "format": ",.0f"
        },
        {
          "field": "Dose 1",
          "type": "quantitative",
          "title": "1st dose administered",
          "format": ",.0f"
        }
      ]
    

      }
    },
    

    "config": {
      "mark": {"invalid": null}
    }
  }
  