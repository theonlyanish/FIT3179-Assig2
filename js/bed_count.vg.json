{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 400,
  "height": 250,
  "data": {"url": "https://raw.githubusercontent.com/theonlyanish/FIT3179-Assig2/main/data/HospitalBedsIndia.csv"},
  "mark": "bar",
  "encoding": {
    "x": {"field": "State/UT", "type": "nominal", "title":"States/Union Territorys"},
    "y": {"aggregate": "mean", "field":"NumUrbanBeds_NHP18", "title": "Number of beds"},

        "tooltip": [
        {"field": "State/UT", "type": "nominal", "title": "State"},
        {
          "field": "NumUrbanBeds_NHP18",
          "type": "quantitative",
          "title": "Number of beds",
          "format": ",.0f"
        }
      ],
      "text": {"field": "NumUrbanBeds_NHP18", "type": "quantitative"}
      
  }
}
