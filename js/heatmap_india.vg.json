{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 600,
  "height": 600,
  "title": "Timeline of Active Covid-19 Cases In India",
  "projection": {
    "type": "equirectangular"
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/theonlyanish/FIT3179-Assig2/main/data/indian_states.json",
        "format": {
          "type": "topojson",
          "feature": "IND_adm1"
        }
      },
      "mark": {
        "type": "geoshape",
        "stroke": "white"
      },
            "params": [
        {
            "name": "pts",
            "select": {
                "type": "point",
                "on": "mouseover"
            }
        }
    ],
      "transform": [
        {
          "lookup": "properties.NAME_1",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/theonlyanish/FIT3179-Assig2/main/data/covid_19_data.csv"
            },
            "key": "Province/State",
            "fields": [
              "Confirmed"
            ]
          }
        }
      ],
      "encoding": {
        "color": {
          "field": "Confirmed",
          "type": "ordinal",
          "title": "Active cases"
        },
        "stroke": {
          "condition": {
              "param": "pts",
              "empty": false,
              "value": "black"
          },
          "value": "white"
      },
      "strokeWidth": {
          "condition": {
              "param": "pts",
              "empty": false,
              "value": 2
          },
          "value": 1
      },
        "tooltip": [
          {
            "field": "properties.NAME_1",
            "type": "nominal",
            "title": "State/UTs"
          },
          {
            "field": "Confirmed",
            "type": "quantitative",
            "title": "Active cases"
          },
          {
            "field":"new_deaths",
            "type": "quantitative",
            "title": "Deaths"
          }
        ]
      }
    }
  ]
}